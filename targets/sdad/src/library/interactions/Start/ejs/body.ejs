<script>
    (function(){
        if ({%- globals?.accessibility?.enabled %}) {
            var showOnMobile = {%- globals?.accessibility?.showOnMobile %}
            var brandColor = getComputedStyle(document.getElementsByTagName('body')[0]).getPropertyValue('--base-brand-color');
            var s = document.createElement('script');
            var h = document.querySelector('head') || document.body;
            s.src = 'https://acsbapp.com/apps/app/dist/js/app.js';
            s.async = true;
            s.onload = function(){
                acsbJS.init(
                    {
                        statementLink : '',
                        footerHtml : '',
                        hideMobile : !showOnMobile,
                        hideTrigger : false,
                        disableBgProcess : false,
                        //langague is aa for testing purposes, to see fallback language of this service
                        language : 'aa',
                        position : 'right',
                        leadColor : brandColor,
                        triggerColor : brandColor,
                        triggerRadius : '50%',
                        triggerPositionX : 'right',
                        triggerPositionY : 'bottom',
                        triggerIcon : 'people',
                        triggerSize : 'bottom',
                        triggerOffsetX : 20,
                        triggerOffsetY : 20,
                        mobile : {
                            triggerSize : 'small',
                            triggerPositionX : 'right',
                            triggerPositionY : 'bottom',
                            triggerOffsetX : 20,
                            triggerOffsetY : 20,
                            triggerRadius : '20'
                        }
                    }
                );
            };
            h.appendChild(s);
        }
    })();
</script>